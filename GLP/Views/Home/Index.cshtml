@using GLP.Models
@model ViewTestTable
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/Paper.css" type="text/css" />
</head>
<body>
    <div> 
        <table class="table table-striped table-hover" style="width:50%">
            <tr>
                <th>STATE ID</th>
                <th>STATE NAME</th>
                <th>INFO</th>
            </tr>
            @foreach(TestTable t in Model.viewTestTable)
            {
                <tr>
                    <th>@t.STATE_ID</th>
                    <th>@t.STATE_NAME</th>
                    <th><button class="btn btn-info">Info</button></th>
                </tr>
            }
        </table>
    </div>
</body>
</html>
